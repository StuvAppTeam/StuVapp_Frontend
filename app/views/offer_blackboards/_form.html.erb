<%= form_for(@offer_blackboard) do |f| %>
  <% if @offer_blackboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer_blackboard.errors.count, "error") %> prohibited this offer_blackboard from being saved:</h2>

      <ul>
      <% @offer_blackboard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <% #Formularsteps fuer anlegen eines neuen Angebotes %>
    <div class="container">
      <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
          <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>Schritt 1</p>
          </div>
          <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>Schritt 2</p>
          </div>
          <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>Schritt 3</p>
          </div>
        </div>
      </div>
      <form role="form">
        <div class="row setup-content" id="step-1">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3>Schrit 1</h3>
              <div class="form-group">
                <%= f.label :title %><br>
                <%= f.text_field :title %>
              </div>
              <div class="form-group">
                <label for="offer_blackboard_description">Beschreibung</label><br>
                  <%= f.text_field :description %>
              </div>
              <div class="form-group">
                <label for="offer_blackboard_totalPrice">Preis</label><br>
                <%= f.text_field :totalPrice %>
              </div>
              <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Weiter</button>
            </div>
          </div>
        </div>
        <div class="row setup-content" id="step-2">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3> Schritt 2</h3>
              <div class="form-group">
                <label for="offer_blackboard_category_id">Kategorie</label><br>

                <%= f.select(:category_id, Category.all.collect {|p| [ p.name, p.id ] }) %>
              </div>
              <div class="form-group">
                <label for="offer_blackboard_condition">Zustand</label><br>
                <%= f.check_box :condition %> Neu?
              </div>
              <div class="form-group">
                <label for="offer_blackboard_image_id">Bild</label><br>
              <%= f.number_field :image_id %>
              </div>
              <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Weiter</button>
            </div>
          </div>
        </div>
        <div class="row setup-content" id="step-3">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3>Schritt 3</h3>
              <div class="form-group">
                <label for="offer_blackboard_street">Stra√üe</label><br>
                <%= f.text_field :street %>
                </div>
              <div class="form-group">
                <label for="offer_blackboard_city">Stadt</label><br>
                <%= f.text_field :city %>
              </div>
              <div class="form-group">
                <label for="offer_blackboard_zipcode">Postleitzahl</label><br>
                <%= f.number_field :zipcode %>
              </div>
              <button class="btn btn-success btn-lg pull-right" type="submit">Jetzt verkaufen</button>
            </div>
          </div>
        </div>
      </form>
    </div>
<% end %>
