<%= form_for(@apartment) do |f| %>
  <% if @apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
      <% @apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
        <p>Schritt 1</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
        <p>Schritt 2</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
        <p>Schritt 3</p>
      </div>
    </div>
  </div>

  <div class="row setup-content" id="step-1">
    <div class="col-xs-12">
      <div class="col-md-12">
        <h3>Schritt 1</h3>
        <div class="form-group">
          <%= f.label :title, "Titel *", class: "control-label" %>
          <%= f.text_field :title, class: "form-control",required: "required" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Beschreibung", class: "control-label" %>
          <%= f.text_area :description, rows: 5, class: "form-control" %>
        </div>
        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" style="margin-bottom: 2%;">Weiter</button>
      </div>
    </div>
  </div>

  <div class="row setup-content" id="step-2">
    <div class="col-xs-12">
        <h3> Schritt 2</h3>
        <div class="form-group row">
          <div class="col-sm-4">
          	<%= f.label :rent, "Miete *", class: "control-label" %> <br />
          	<%= f.text_field :rent ,style: "width: 50%; margin-right: 5%;", required: "required" %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :additionalCost, "zusätzliche Kosten", class: "control-label" %> <br />
          	<%= f.text_field :additionalCost, style: "width: 50%; margin-right: 5%;", required: "required" %>
          </div>
          <div class="col-sm-4">
            <%= f.label :city, "Stadt *", class: "control-label" %> <br />
          	<%= f.text_field :city, style: "width: 50%; margin-right: 5%;", required: "required" %>
          </div>
        </div>
        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" style="margin-bottom: 2%;">Weiter</button>
        </div>
    </div>
  </div>


  <div class="row setup-content" id="step-3">
    <div class="col-xs-12">
      <div class="col-md-12">
        <h3>Schritt 3</h3>
        <div class="form-group row">
          <div class="col-sm-4">
          	<%= f.label :size, "Größe *", class: "control-label"  %> <br />
          	<%= f.text_field :size, style: "width: 50%; margin-right: 5%;", required: "required" %>
          </div>

          <div class="col-sm-4">
          	<%= label_tag(:phase, "Phase *: ", class: "control-label") %> <br />
  			    <%= f.select(:phase, [['A', :A], ['B', :B],['Beide', :Beide]]) %>
  	      </div>

  		  <div class="col-sm-4">
          	<%= label_tag(:apartment_type, "Wohnungstyp *", class: "control-label") %><br />
  			<%= select_tag(:apartment_type, options_for_select(['Alles', 'WG','Wohnung'])) %>
  		  </div>

  	 	  <div class="col-sm-4">
          	<%= f.label :furnished, "Möbliert *", class: "control-label" %><br />
          	<%= f.check_box :furnished %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :phone, "Telefon", class: "control-label" %><br>
          	<%= f.text_field :phone %>
          </div>

        </div>
        <%= f.hidden_field :request, :value=>true%>
        <%= f.submit "Speichern",:class => "btn btn-primary btn-lg pull-right", :style => "margin-bottom: 2%;" %>
      </div>
    </div>
  </div>

<% end %>
