<%= form_for(@apartment) do |f| %>
  <% if @apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
      <% @apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
        <p>Schritt 1</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
        <p>Schritt 2</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
        <p>Schritt 3</p>
      </div>
    </div>
  </div>

  <div class="row setup-content" id="step-1">
    <div class="col-xs-12">
      <div class="col-md-12">
        <h3>Schritt 1</h3>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, rows: 5 %>
        </div>
        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" style="margin-bottom: 2%;">Weiter</button>
      </div>
    </div>
  </div>

  <div class="row setup-content" id="step-2">
    <div class="col-xs-12">
        <h3> Schritt 2</h3>
        <div class="form-group">
          <%= f.label :totalPrize %><br>
          <%= f.text_field :totalPrize %>
          <%= f.label :additionalCost %><br>
          <%= f.text_field :additionalCost %>
          <%= f.label :deposit %><br>
          <%= f.text_field :deposit %>
          <%= f.label :street %><br>
          <%= f.text_field :street %>
          <%= f.label :city %><br>
          <%= f.text_field :city %>
          <%= f.label :zipcode %><br>
          <%= f.text_field :zipcode %>
        </div>
        <% #Nested Form fÃ¼r Image einbindung %>
        <div class="form-group">
          <%= f.fields_for :images do |builder| %>
              <%= render 'image_fields', f: builder %>
          <% end %>
          <%= link_to_add_fields "Add Image", f, :images %>
        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" style="margin-bottom: 2%;">Weiter</button>
        </div>
    </div>
  </div>


  <div class="row setup-content" id="step-3">
    <div class="col-xs-12">
      <div class="col-md-12">
        <h3>Schritt 3</h3>
        <div class="form-group row">
          <div class="col-sm-4">
          	<%= f.label :size %><br>
          	<%= f.text_field :size %>
          </div>

          <div class="col-sm-4">
          	<%= label_tag(:phase, "Phase: ", class: "label-form") %><br>
  			<%= f.select(:phase, [['A', :A], ['B', :B],['Beide', :Beide]]) %>
    	  </div>

  		  <div class="col-sm-4">
         	<%= label_tag(:apartment_type, "Wohnungstyp", class: "label-form") %><br>
  			<%= f.select(:apartment_type, [['Alles', :Alles], ['WG', :WG],['Wohnung', :Wohnung]]) %>
  		  </div>

          <div class="col-sm-4">
          	<%= f.label :movein %><br>
          	<%= f.date_select :movein %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :furnished %><br>
          	<%= f.check_box :furnished %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :internet %><br>
          	<%= f.check_box :internet %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :parking %><br>
          	<%= f.text_field :parking %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :rooms %><br>
          	<%= f.number_field :rooms %>
          </div>

          <div class="col-sm-4">
          	<%= f.label :smoking %><br>
          	<%= f.check_box :smoking %>
          </div>

        </div>
        <%= f.hidden_field :request, :value=>false%>
        <%= f.submit "Speichern",:class => "btn btn-primary btn-lg pull-right", :style => "margin-bottom: 2%;" %>
      </div>
    </div>
  </div>

<% end %>
