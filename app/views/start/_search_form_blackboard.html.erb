<%= form_tag offer_blackboards_path, :method => "get", id: "search_form_blackboard" do %>
	<%= text_field_tag :search, params[:search], placeholder: "Suche", class: "search-bar" %> <hr />
	<div class="col-sm-12">
		
		<div class="row">
		 <div class="col-sm-4">
		 	<%= label_tag(:condition, "Zustand:  ", class: "label-form") %> <br />
			<%= select_tag(:condition, options_for_select(['Alles', 'Gebraucht','Neu'])) %>
		 </div>
		 <div class="col-sm-4">
		 	<%= label_tag(:category, "Kategorie:  ", class: "label-form") %> <br />
			<%= select_tag(:category, options_from_collection_for_select(Category.all, 'id', 'name'),include_blank: "Alles") %>
		 </div>
		 <div class="col-sm-4">
		 	  <%= label_tag(:request, "Typ: ", class: "label-form") %> <br />
			<%= select_tag(:request, options_for_select(['Angebote', 'Gesuche'])) %>
		 </div>
		 </div>
		<hr>
	</div>

	<%= submit_tag "Suchen", :name => nil, :class => "btn search"%>
<% end %>
