
<%= form_tag apartments_path, :method => "get" do %>
	<%= text_field_tag :search, params[:search], placeholder: "Ort", class: "search-bar" %> <hr />
	<div class="col-sm-12">
		<div class="row">
			<div class="col-sm-3" style="border-right: 1px solid black">
				<%= label_tag(:phase, "Phase: ", class: "label-form") %>
				<%= select_tag(:phase, options_for_select(['A', 'B','Beide'])) %>
			</div>
			<div class="col-sm-5" style="border-right: 1px solid black">
				<%= label_tag(:type, "Wohnungstyp", class: "label-form") %>
				<%= select_tag(:type, options_for_select(['Alles', 'WG','Wohnung'])) %>
			</div>
			<div class="col-sm-4">
        <%= label_tag(:request, "Typ: ", class: "label-form") %>
        <%= select_tag(:request, options_for_select(['Angebote', 'Gesuche'])) %>
      </div>
		</div>
		<hr>
	</div>

	<%= submit_tag "Suchen", :name => nil, :class => "btn search"%>
<% end %>
